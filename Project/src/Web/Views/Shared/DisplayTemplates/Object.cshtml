@foreach (var prop in ViewData.ModelMetadata.Properties.Where(pm => pm.ShowForDisplay ).OrderBy(a => a.Order))
{
    <div class="form-group">
        <label class="col-sm-3 control-label"> @LangManager.GetString(prop.GetDisplayName())</label>
        <div class="col-sm-6" style="padding: 6px 15px">
            @Html.Display(prop.PropertyName)
        </div>
    </div>
}
